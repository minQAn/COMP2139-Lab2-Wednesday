@model TipCalculator
@{
    ViewData["Title"] = "Home Page2";
}


<div asp-validation-summary="All">
    <!-- all error message will be here-->
</div>

<form asp-action="Index" method="post">

    <div>
        <label asp-for="MealCost">Cost of meal:</label>
        <input asp-for="MealCost" />
    </div>

    <div>
        <label>15% tip:</label>
        <label>@ViewBag.Fifteen.ToString("C2")</label>  <!--c2 is format of currency -->
    </div>

    <div>
        <label>20% tip:</label>
        <label>@ViewBag.Twenty.ToString("C2")</label> 
    </div>

    <div>
        <label>25% tip:</label>
        <label>@ViewBag.TwentyFive.ToString("C2")</label>  
    </div>

    <div>
        <button type="submit">Calculate</button>
        <a asp-action="Index">Clear</a>     <!--다른 개념임.. 이건 post한게 아님 그냥 새로고침-->
    </div>
</form>

