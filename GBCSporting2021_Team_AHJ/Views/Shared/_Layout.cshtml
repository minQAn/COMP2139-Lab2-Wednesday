@{
    string controller =
       ViewContext.RouteData.Values["controller"].ToString();
    string action =
        ViewContext.RouteData.Values["action"].ToString();
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GBCSporting2021_Team_AHJ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- our own style-->
    <link rel="stylesheet" href="~/css/Home.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-primary fixed-top">
            <a class="navbar-brand" href="/">SportsPro</a>
            <button class="navbar-toggler" type="button"
                    data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto">
                    <a class="nav-link
                        @(controller == "Home" && action == "Index" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link
                        @(controller == "Product" ? "active" : "")"
                       asp-controller="Product" asp-action="index">Products</a>
                    <a class="nav-link
                        @(controller == "Technician" ? "active" : "")"
                       asp-controller="Technician" asp-action="index">Technicians</a>
                    <a class="nav-link
                        @(controller == "Customer" ? "active" : "")"
                       asp-controller="Customer" asp-action="index">Customers</a>
                    <a class="nav-link
                        @(controller == "Incident" ? "active" : "")"
                       asp-controller="Incident" asp-action="index">Indicents</a>
                    <a class="nav-link
                        @(controller == "Registration" ? "active" : "")"
                       asp-controller="Registration" asp-action="index">Registration</a>

                    <a class="nav-link
                        @(controller == "Home" && action == "About" ? "active" : "")"
                       asp-controller="Home" asp-action="About">About</a>
                </div>
                <div class="navbar-nav navbar-right">
                    <a class="nav-link"
                       asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                </div>
            </nav>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


</body>
</html>
