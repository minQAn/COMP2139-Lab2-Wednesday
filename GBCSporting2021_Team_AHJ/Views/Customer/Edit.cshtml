@model Customer
@{
    string title = ViewBag.Action + " Customer";
    ViewBag.Title = title;
}


<h1>@title</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">FirstName</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">LastName</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PostalCode">PostalCode</label>
        <input asp-for="PostalCode" class="form-control" />
    </div>

    <!-- 이해 안되는 부분 asp-items, SelectList--> 
    <div class="form-group">
        <label asp-for="CountryId">Country</label>
        <select asp-for="CountryId"
                asp-items="@(new SelectList(ViewBag.Countries, "CountryId", "Name", Model.CountryId))"  
                class="form-control">
            <option value="">Select a country...</option>     @*For default. value="" means null!!  *@  
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <input type="hidden" asp-for="CustomerId" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-primary">Cancel</a>

</form>
